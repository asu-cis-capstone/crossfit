<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/FlyOutContent"
    android:background="#000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/headerLayout">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:id="@+id/menuLayout"
            android:layout_gravity="top">
            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="10"
                android:id="@+id/hamburgerButton"
                android:background="@drawable/hamburger" />
            <ImageView
                android:src="@drawable/wodstar_logo_white"
                android:layout_width="0dp"
                android:scaleType="centerInside"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="75"
                android:layout_height="match_parent"
                android:id="@+id/logoImageView" />
            <ImageView
                android:src="@drawable/icon"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:id="@+id/wodstarImage"
                android:layout_gravity="right" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/hamburgerLayout"
            android:layout_gravity="left" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/iconLayout"
            android:layout_gravity="right" />
    </FrameLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="530dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:id="@+id/mainLayout">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:background="#00FFFFFF"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp">
                <ImageButton
                    android:src="@drawable/wodsButton"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:layout_height="169.1dp"
                    android:padding="0dp"
                    android:id="@+id/wodsImageButton" />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="50sp"
                    android:background="#00FFFFFF"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:text="WODs" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:background="#00FFFFFF">
                <ImageButton
                    android:src="@drawable/movementsButton"
                    android:layout_width="match_parent"
                    android:layout_height="169.1dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:id="@+id/movementsImageButton" />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="50sp"
                    android:background="#00FFFFFF"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:text="MOVEMENTS" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:layout_width="fill_parent"
                android:background="#00FFFFFF"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/profileImage"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:layout_centerInParent="true"
                    android:layout_height="169.1dp"
                    android:id="@+id/myProfileImageButton" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:background="#00FFFFFF"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/articles"
                    android:layout_width="match_parent"
                    android:layout_height="169.1dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/articlesImageButton"
                    android:scaleType="centerCrop"
                    android:padding="0dp" />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="50sp"
                    android:background="#00FFFFFF"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:text="ARTICLES" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>